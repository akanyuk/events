{
  "require": {
    "ccampbell/chromephp": "^4.1",
    "akanyuk/speccy_gfx_converter": "^1.1.3",
    "akanyuk/nfw": "^v1.3.4",
    "ext-zip": "*",
    "ext-iconv": "*",
    "ext-mbstring": "*",
    "ext-gd": "*",
    "ext-json": "*",
    "ext-dom": "*",
    "ext-simplexml": "*",
    "ext-libxml": "*",
    "ext-apcu": "*",
    "twbs/bootstrap": "5.3.3",
    "thomaspark/bootswatch": "5.3.3"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/thomaspark/bootswatch.git"
    }
  ],
  "scripts": {
    "post-update-cmd": [
      "rm -rf public_html/vendor/bootstrap5",
      "mkdir -p public_html/vendor/bootstrap5/theme",
      "cp -R vendor/twbs/bootstrap/dist/* public_html/vendor/bootstrap5/",
      "cp -f vendor/thomaspark/bootswatch/dist/cosmo/bootstrap.min.css public_html/vendor/bootstrap5/theme/",
      "sed -i -e 's/@import url(https:\\/\\/fonts.googleapis.com\\/css2?family=Source+Sans+Pro:wght@300;400;700&display=swap);//g' public_html/vendor/bootstrap5/theme/bootstrap.min.css\n"
    ]
  }
}
